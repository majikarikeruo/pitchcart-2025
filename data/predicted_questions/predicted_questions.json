{
  "name": "PredictedQuestionsSchema",
  "strict": true,
  "schema": {
    "type": "object",
    "properties": {
      "question_items": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "question": {
              "type": "string",
              "description": "予想される質問"
            },
            "background": {
              "type": "string",
              "description": "この質問が出る背景・理由"
            },
            "source": {
              "type": "string",
              "enum": ["個人特性", "業界標準", "内容ギャップ"],
              "description": "質問の出所"
            },
            "priority": {
              "type": "string",
              "enum": ["high", "medium", "low"],
              "description": "質問の優先度"
            }
          },
          "required": ["question", "background", "source", "priority"],
          "additionalProperties": false
        }
      }
    },
    "required": ["question_items"],
    "additionalProperties": false
  }
}
