# Firebase Configuration
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_auth_domain_here
VITE_FIREBASE_PROJECT_ID=your_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_storage_bucket_here
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
VITE_FIREBASE_APP_ID=your_app_id_here
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Firebase Admin (server-side verification)
# Provide service account JSON as a single line (escape newlines as \n)
# Example: FIREBASE_SERVICE_ACCOUNT={"project_id":"...","client_email":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n"}
FIREBASE_SERVICE_ACCOUNT=

# Backend API URL (for dev proxy in vite.config.ts)
# e.g. http://localhost:8787
VITE_API_URL=

# PitchCart backend (consensus API). If set, the client calls
# `${VITE_PITCHCART_API_URL}/analyze` instead of Vite proxy.
# e.g. http://localhost:8787
VITE_PITCHCART_API_URL=

# Models (placeholders; not used by mock server)
PERSONA_MODEL=gpt-4o-mini
MERGE_MODEL=gpt-4o
USE_LLM=true
USE_MASTRA=false
LOG_ANALYSIS=false
PORT=8787
PERSONA_TIMEOUT_MS=10000
MERGE_TIMEOUT_MS=10000

# LLM provider config
# LLM_PROVIDER=openai | anthropic | gemini
LLM_PROVIDER=openai
# OpenAI-compatible
OPENAI_API_KEY=
LLM_API_KEY=
LLM_BASE_URL=https://api.openai.com
# Anthropic (if LLM_PROVIDER=anthropic)
ANTHROPIC_API_KEY=
# Gemini (if LLM_PROVIDER=gemini)
GEMINI_API_KEY=
